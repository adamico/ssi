<section class="home">
  <div class="row">
    <div class="span4 offset8">
      <article id="next_school">
        <% if @school -%>
          <h3 class='title'><%= link_to @school.title, program_path %></h3>
          <h4 class='theme' style="letter-spacing: 1px;"><%= @school.theme %></h4>
          <h5 class='school_when_where'><%= @school.when_and_where.html_safe %></h5>
        <% else -%>
          <h2>No school registered in database, yet.</h2>
        <% end -%>
        <aside>
          <%= link_to "See the Current Program", "/program", class: "btn btn-info btn-large" if !@school.cancelled? && @school.events.any? %>
          <br />
          <%= link_to "Fill in the Registration Form", "/registration", class: "btn btn-primary btn-large" if @school.active? %>
        </aside>
      </article>
    </div>
  </div>
</section>
