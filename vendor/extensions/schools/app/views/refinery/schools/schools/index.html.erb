<% content_for :body do %>
  <h1 id="body_content_title">Previous Schools</h1>
  <% if @schools.any? -%>
    <div id="schools">
      <% @schools.each do |school| %>
        <div class="school">
          <div class="title"><%= school.title %></div>
          <div class="when_and_where"><%= school.when_and_where.html_safe %></div>
          <div class="theme"><%= school.theme %></div>
          <div class="publications"><%= raw school.publication %></div>
        </div>
      <% end %>
      <%= page_navigation_links @schools %>
    </div>
  <% else %>
    <p>No previous schools found.</p>
  <% end -%>
<% end %>

<%= render '/refinery/content_page' %>
