<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="schools">
      <% @schools.each do |school| %>
        <li>
          <%= link_to school.title, refinery.schools_school_path(school) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
