<% content_for :body_content_title do %>
  Registration Form
<% end -%>

<% content_for :body do %>
  <div class='registrations'>
  <% if @school.active? %>
    <%= render 'form', registration: @registration, school: @school %>
  <% else %>
    <% if @school.closed? || @school.cancelled? %>
      <h3>
        <% if last_school.cancelled? -%>
          Registrations for the <%= @school.title %> are closed since this summerschool has been cancelled. See you next year!
        <% else %>
          Registrations for the <%= @school.title %> are closed.
        <% end -%>
      </h3>
    <% else %>
      <% if @school.intro_registration.present? %>
        <%= raw @school.intro_registration %>
      <% else %>
        <h3>Registrations are not yet open.</h3>
      <% end -%>
    <% end -%>
  <% end %>
  </div>
<% end %>

<%= render "/refinery/content_page" %>
