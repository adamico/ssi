<% content_for :body_content_title do %>
  Registration Form
<% end -%>

<% content_for :body_content_left do %>
  <div class='registrations'>
    <% if @registration -%>
      <% if @school.active? -%>
        <%= render 'form', registration: @registration, school: @school %>
      <% else -%>
        <% if @school.intro_registration %>
          <%= raw @school.intro_registration %>
        <% else %>
          <h3>Registrations are not yet open.</h2>
        <% end -%>
      <% end -%>
    <% else -%>
      <% last_school = ::Refinery::Schools::School.last %>
      <% if last_school.cancelled? -%>
        <h3>Registrations for the <%= last_school.title %> are closed since this summerschool has been cancelled. See you next year!</h2>
        <% else %>
        <h3>Registrations are closed.</h2>
      <% end -%>
    <% end -%>
  </div>
<% end %>

<%= render "/refinery/content_page" %>

