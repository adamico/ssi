<ul>
  <% if ::Refinery::Registrations::Admin::RegistrationsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.registrations_admin_registrations_path %>
    </li>
  <% end %>
<% if !searching? && ::Refinery::Registrations::Admin::RegistrationsController.sortable? && ::Refinery::Registrations::Registration.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Registrations"),
                 refinery.registrations_admin_registrations_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Registrations"),
                 refinery.registrations_admin_registrations_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
