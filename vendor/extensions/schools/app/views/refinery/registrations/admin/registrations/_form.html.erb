<%= form_for [refinery, :registrations_admin, @registration] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @registration,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :surname -%>
    <%= f.text_field :surname, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :first_name -%>
    <%= f.text_field :first_name  -%>

  </div>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title  -%>

  </div>
  
  <div class='field'>
    <%= f.label :company -%>
    <%= f.text_field :company  -%>

  </div>
  
  <div class='field'>
    <%= f.label :address -%>
    <%= f.text_field :address  -%>

  </div>
  
  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city  -%>

  </div>
  
  <div class='field'>
    <%= f.label :zip -%>
    <%= f.text_field :zip  -%>

  </div>
  
  <div class='field'>
    <%= f.label :country -%>
    <%= f.text_field :country  -%>

  </div>
  
  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone  -%>

  </div>
  
  <div class='field'>
    <%= f.label :fax -%>
    <%= f.text_field :fax  -%>

  </div>
  
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email  -%>

  </div>
  
  <div class='field'>
    <%= f.label :arrival -%>
    <%= f.date_select :arrival  -%>

  </div>
  
  <div class='field'>
    <%= f.label :departure -%>
    <%= f.date_select :departure  -%>

  </div>
  
  <div class='field'>
    <%= f.label :accompagne -%>
    <%= f.text_field :accompagne  -%>

  </div>
  
  <div class='field'>
    <%= f.label :ip -%>
    <%= f.text_field :ip  -%>

  </div>
  
  <div class='field'>
    <%= f.label :payment -%>
    <%= f.text_field :payment  -%>

  </div>
  
  <div class='field'>
    <%= f.label :amount -%>
    <%= f.text_field :amount  -%>

  </div>
  
  <div class='field'>
    <%= f.label :payment_date -%>
    <%= f.text_field :payment_date  -%>

  </div>
  
  <div class='field'>
    <%= f.label :school_id -%>
    <%= f.number_field :school_id  -%>

  </div>
  
  <div class='field'>
    <%= f.label :state -%>
    <%= f.text_field :state  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.registrations.admin.registrations.registration'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @registration.surname) %>
<% end -%>
