<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(link_category) -%>">
  <span class='title'>
    <%= link_category.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.link_categories_link_category_path(link_category),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_link_categories_admin_link_category_path(link_category),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.link_categories_admin_link_category_path(link_category),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => link_category.title),
        :method => :delete %>
  </span>
</li>
