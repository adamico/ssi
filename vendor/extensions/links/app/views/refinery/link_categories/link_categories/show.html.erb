<% content_for :body_content_title do %>
  <%= @link_category.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @link_category.title %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="link_categories">
      <% @link_categories.each do |link_category| %>
        <li>
          <%= link_to link_category.title, refinery.link_categories_link_category_path(link_category) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
