<% content_for :body_content_title do %>
  <%= @link.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @link.title %>
    </p>
  </section>
  <section>
    <h1>Url</h1>
    <p>
      <%=raw @link.url %>
    </p>
  </section>
  <section>
    <h1>Link Category</h1>
    <p>
      <%=raw @link.link_category_id %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="links">
      <% @links.each do |link| %>
        <li>
          <%= link_to link.title, refinery.links_link_path(link) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
